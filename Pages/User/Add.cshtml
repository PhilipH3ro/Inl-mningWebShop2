@page
@model DC2.UI.Pages.User.AddModel
@{
        if (User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutLogedIn";
    }
}

<center>
    <h1>Add Customer</h1>
    <br>
</center>

<form asp-page-handler="Save">
    <div class="form-group">
        <label for="username">User Name</label>
        <input type="text" class="form-control" asp-for="CurrentUser.UserName" placeholder="Enter User Name">
        <span class="text-danger" asp-validation-for="CurrentUser.UserName"></span>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="text" class="form-control" asp-for="CurrentUser.Password" placeholder="Enter Password">
        <span class="text-danger" asp-validation-for="CurrentUser.Password"></span>
    </div>
    <div class="form-group">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" asp-for="CurrentUser.FirstName" placeholder="Enter First Name">
        <span class="text-danger" asp-validation-for="CurrentUser.FirstName"></span>
    </div>
    <div class="form-group">
        <label for="lastname">Last Name</label>
        <input type="text" class="form-control" asp-for="CurrentUser.LastName" placeholder="Enter Last Name">
        <span class="text-danger" asp-validation-for="CurrentUser.LastName"></span>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="CurrentUser.Email" id="email" placeholder="Email">
        <span class="text-danger" asp-validation-for="CurrentUser.Email"></span>
    </div>
    <div class="form-group">
        <label for="phonenumber">Phone Number</label>
        <input type="text" class="form-control" asp-for="CurrentUser.PhoneNumber" id="email" placeholder="Phone Number">
        <span class="text-danger" asp-validation-for="CurrentUser.PhoneNumber"></span>
    </div>






